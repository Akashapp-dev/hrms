{
  "name": "hrms-template-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "seed": "node seed.js",
    "build": "esbuild ../public/app.js --bundle --minify --format=esm --outfile=../public/dist/app.js && esbuild ../public/styles.css --minify --outfile=../public/dist/styles.css && node ./scripts/minify-html.js",
    "build:watch": "esbuild ../public/app.js --bundle --minify --format=esm --watch --outfile=../public/dist/app.js",
    "start:prod": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.2",
    "nanoid": "^5.0.7",
    "puppeteer": "^22.15.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.5"
  }
}
